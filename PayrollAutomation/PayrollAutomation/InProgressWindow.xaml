<Window x:Class="PayrollAutomation.InProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PayrollAutomation"
        mc:Ignorable="d"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        Width="228" Height="72"
        Background="White"
        ShowInTaskbar="False"
        Topmost="True">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Processing..." FontSize="16" FontWeight="Bold" Margin="0,10"/>
            <Canvas Width="40" Height="40">
                <Ellipse Width="10" Height="10" Fill="Gray" Canvas.Left="15" Canvas.Top="0">
                    <Ellipse.RenderTransform>
                        <RotateTransform x:Name="spinnerRotate" CenterX="5" CenterY="20"/>
                    </Ellipse.RenderTransform>
                </Ellipse>
            </Canvas>
        </StackPanel>
        <Grid.Triggers>
            <EventTrigger RoutedEvent="Window.Loaded">
                <BeginStoryboard>
                    <Storyboard RepeatBehavior="Forever">
                        <DoubleAnimation
                            Storyboard.TargetName="spinnerRotate"
                            Storyboard.TargetProperty="Angle"
                            From="0" To="360" Duration="0:0:1"/>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
        </Grid.Triggers>
    </Grid>
</Window>
